#include <Wire.h>
#include <Adafruit_PWMServoDriver.h>

Adafruit_PWMServoDriver pwm = Adafruit_PWMServoDriver(); // Initialize PCA9685

void setup() {
  pwm.begin();
  pwm.setPWMFreq(50); // Set frequency to 50 Hz for servos
  delay(1000);
}

void loop() {
  initial();
  delay(2000);
  sit();
  delay(1000);
  stand();
  delay(2000);
  sit();
  delay(500);
  stand();
  delay(500);
  sit();
  delay(500);
  stand();
  delay(1000);
  h_wave();
  delay(1500);
  h_wave();
  delay(2000);
}
void initial(){
  pwm.setPWM(0,0,375);//initial
  pwm.setPWM(1,0,375);
  pwm.setPWM(2,0,375);
  pwm.setPWM(3,0,375);
  pwm.setPWM(4,0,375);
  pwm.setPWM(5,0,375);
  pwm.setPWM(6,0,375);
  pwm.setPWM(7,0,375);
}
void sit(){
  pwm.setPWM(0,0,375);//sit
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,375);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,375);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,375);
  pwm.setPWM(7,0,300);
}
void stand(){
  pwm.setPWM(0,0,200);//stand
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
}
void h_wave(){
  pwm.setPWM(0,0,200);//stand
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(200);
  pwm.setPWM(0,0,500);
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(500);
  pwm.setPWM(0,0,500);
  pwm.setPWM(1,0,350);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(200);
  pwm.setPWM(0,0,500);
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(200);
  pwm.setPWM(0,0,450);
  pwm.setPWM(1,0,350);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(200);
  pwm.setPWM(0,0,450);
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(200);
  pwm.setPWM(0,0,450);
  pwm.setPWM(1,0,350);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(200);
  pwm.setPWM(0,0,450);
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(500);
  pwm.setPWM(0,0,200);//stand
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,550);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,175);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,550);
  pwm.setPWM(7,0,300);
  delay(1000);
}
void forward(){
  pwm.setPWM(0,0,300);//stand
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,450);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,300);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,450);
  pwm.setPWM(7,0,300);
  delay(200);
  pwm.setPWM(0,0,300);
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,450);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,375);
  pwm.setPWM(5,0,450);
  pwm.setPWM(6,0,450);
  pwm.setPWM(7,0,300);
  delay(100);
  pwm.setPWM(0,0,300);
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,450);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,375);
  pwm.setPWM(5,0,350);
  pwm.setPWM(6,0,450);
  pwm.setPWM(7,0,300);
  delay(100);
  pwm.setPWM(0,0,300);
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,375);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,300);
  pwm.setPWM(5,0,350);
  pwm.setPWM(6,0,450);
  pwm.setPWM(7,0,300);
  delay(100);
  pwm.setPWM(0,0,300);
  pwm.setPWM(1,0,450);
  pwm.setPWM(2,0,375);
  pwm.setPWM(3,0,300);
  pwm.setPWM(4,0,300);
  pwm.setPWM(5,0,350);
  pwm.setPWM(6,0,450);
  pwm.setPWM(7,0,300);
}
